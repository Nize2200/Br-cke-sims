<Window x:Class="XInputRemapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XInput Remapper" Height="400" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="ButtonPressTextBlock" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   FontSize="24" Grid.Column="1" Margin="122,0,0,0" Width="145"/>
        <TextBlock x:Name="JoystickLeft"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top" 
                   FontSize="24" Width="164" Margin="0,100,30,0"/>
        <TextBlock x:Name="JoystickRight"
           HorizontalAlignment="Right" 
           VerticalAlignment="Top" 
           FontSize="24" Width="164" Margin="0,185,30,0"/>
        <Button Content="Add to Database" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,5,3,10"
                Click="AddToDatabaseButton_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
